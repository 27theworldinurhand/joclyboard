{
	"name": "JoclyBoard",
	"description": "Desktop application for playing board games",
	"version": "0.9.1",
	"productName": "JoclyBoard",
	"keywords": [
		"board games",
		"chess",
		"draughts",
		"variants",
		"webgl",
		"electron",
		"javascript"
	],
	"homepage": "https://github.com/mi-g/joclyboard",
	"author": {
		"name": "Michel Gutierrez",
		"email": "mig@jocly.com",
		"url": "https://github.com/mi-g"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/mi-g/joclyboard"
	},
	"license": "AGPL-3.0 OR SEE LICENSE IN COPYING.md",
	"devDependencies": {
		"electron": "^1.6.1",
		"gulp": "^3.9.1",
		"gulp-jison": "^1.2.0"
	},
	"build": {
		"appId": "com.jocly.board",
		"linux": {
			"target": [
				"deb",
				"tar.gz",
				"AppImage"
			],
			"maintainer": "Michel Gutierrez <mig@jocly.com> (https://github.com/mi-g)"
		},
		"win": {
			"target": [
				"nsis"
			]
		},
		"nsis": {
			"runAfterFinish": false,
			"deleteAppDataOnUninstall": true
		},
		"mac": {
			"category": "public.app-category.games"
		},
		"publish": {
			"provider": "github",
			"owner": "mi-g",
			"repo": "joclyboard"
		}
	},
	"scripts": {
		"pack": "build --dir",
		"dist": "build --win --linux --ia32 --x64",
		"dist-test": "build --linux --x64",
		"dist-mac": "build --mac",
		"package-linux": "electron-packager app --overwrite --platform=linux --arch=x64 --icon=assets/icons/png/1024x1024.png --prune=true --out=release-builds"
	},
	"postinstall": "install-app-deps"
}